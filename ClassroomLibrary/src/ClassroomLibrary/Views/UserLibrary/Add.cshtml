@model ClassroomLibrary.ViewModels.AddUserLibraryViewModel

<h1>Add Book</h1>

<form asp-controller="UserLibrary" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="BookTitle"></label>
        <input class="form-control" asp-for="BookTitle" />
        <span asp-validation-for="BookTitle"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorFName"></label>
        <input class="form-control" asp-for="AuthorFName" />
        <span asp-validation-for="AuthorFName"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorLName"></label>
        <input class="form-control" asp-for="AuthorLName" />
        <span asp-validation-for="AuthorLName"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookLevel"></label>
        <input class="form-control" asp-for="BookLevel" />
        <span asp-validation-for="BookLevel"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <input class="form-control" asp-for="Genre" />
        <span asp-validation-for="Genre"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
    </div>

    <input type="submit" value="Add Book" />

</form>

