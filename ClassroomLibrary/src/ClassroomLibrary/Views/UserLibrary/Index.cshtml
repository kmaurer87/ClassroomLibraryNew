@model List<ClassroomLibrary.Models.UserLibrary>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Title of Book</th>
        <th>Author's First Name</th>
        <th>Author's Last Name</th>
        <th>Genre</th>
        <th>Book Level</th>
        <th>Category</th>
        <th>ID Number</th>
    </tr>

    @foreach (var userlibrary in Model)
    {
        <tr>
            <td>@userlibrary.Title</td>
            <td>@userlibrary.AuthorFName</td>
            <td>@userlibrary.AuthorLName</td>
            <td>@userlibrary.Genre</td>
            <td>@userlibrary.BookLevel</td>
            <td>@userlibrary.Category.Name</td>
            <td>@userlibrary.ID</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No books yet!</p>
}

<p><a asp-controller="UserLibrary" asp-action="Add">Add Books</a></p>
